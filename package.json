{
  "name": "@lepion/mcp-server-doppler",
  "version": "0.2.0",
  "description": "Unified Model Context Protocol server for Doppler secret management with optional intelligence features",
  "repository": {
    "type": "git",
    "url": "https://github.com/kayaozkur/mcp-server-doppler.git"
  },
  "homepage": "https://github.com/kayaozkur/mcp-server-doppler#readme",
  "bugs": {
    "url": "https://github.com/kayaozkur/mcp-server-doppler/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "@lepion/mcp-server-doppler": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/unified-index.ts",
    "dev:legacy": "tsx src/index.ts",
    "dev:enhanced": "tsx src/enhanced-index.ts",
    "start": "node dist/unified-index.js",
    "start:legacy": "node dist/index.js",
    "start:enhanced": "node dist/enhanced-index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "RUN_INTEGRATION_TESTS=true jest --testMatch='**/*.integration.test.ts' --runInBand",
    "benchmark": "RUN_BENCHMARKS=true tsx src/__tests__/benchmarks/performance.bench.ts",
    "docs": "typedoc",
    "docs:markdown": "typedoc --plugin typedoc-plugin-markdown --out docs/api-markdown",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "doppler",
    "secrets",
    "secret-management"
  ],
  "author": "Lepion Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.6.0",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
